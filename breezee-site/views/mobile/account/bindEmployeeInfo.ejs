<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>绑定员工卡</title>
    <% include ../common/public.ejs %>
</head>
<body ontouchstart>
<article>
    <form id="editForm">
    <input type="hidden" name="id" value="<%= userData.userId %>" />
    <div class="bh">
        <div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="员工编号" name="code" disabled value="<%= userData.userCode %>"/>
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="营运站点" name="company" disabled value="<%= userData.siteId %>"/>
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="员工姓名" name="name" disabled value="<%= userData.userName %>"/>
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="email" placeholder="请提供Microsoft邮箱@microsoft.com" name="email" value="<%= userData.email %>"/>
                </div>
            </div>
        </div>
    </div>
    </form>
</article>

<footer>
    <div class="footer_box"><a href="javascript:void(0);" id="submit" class="weui_btn weui_btn_warn">验证</a></div>
</footer>
<% include ../common/footer.ejs %>
</body>
</html>
