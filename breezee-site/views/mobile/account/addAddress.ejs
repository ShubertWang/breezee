<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>添加地址</title>
    <% include ../common/public.ejs %>
</head>
<body ontouchstart>
<form id="form">
    <input type="hidden" name="id" value="<%= body.id%>" />
<article>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">联系人</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" placeholder="您的姓名" name="addressee" value="<%= body.addressee %>"/>
            </div>
        </div>
    </div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">联系电话</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="tel" placeholder="您的手机号码" name="phone" value="<%= body.phone %>"/>
            </div>
        </div>
    </div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">收货地址</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" placeholder="您的详细地址" name="address" value="<%= body.address %>"/>
            </div>
        </div>
    </div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">是否默认</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <div class="slideThree">
                    <input type="checkbox" value="true" id="slideThree" name="defaultFlag" <%= body.defaultFlag?"checked":"" %>/>
                    <label for="slideThree"></label>
                </div>
            </div>
        </div>
    </div>
</article>
</form>

<footer>
    <div class="footer_box"><a href="javascript:void(0);" id="submit" class="weui_btn weui_btn_warn">确定</a></div>
</footer>

<% include ../common/footer.ejs %>
</body>
</html>
