<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>收货地址</title>
    <% include ../common/public.ejs %>
</head>
<body ontouchstart>
<article>
    <div class="bh">
        <ul class="list-group">
            <% for(var i = 0; i < body.length; i++){ %>
            <li class="<%= body[i].defaultFlag?"list-group-item_edit":"list-group-item_edit_b" %> bh">
                <a href="<%= global.config.contextPath + global.config.viewPrefix %><%= (data.pickFlag?"/order/orderConfirm?restId="+data.restId+"&userId="+userData.userId+"&addressId=":"/account/addAddress?id=") + body[i].id %>">
                    <div class="bh">
                        <div class="title_a_h"><%= body[i].consigneeName %></div>
                        <div class="title_c_h"><%= body[i].consigneeMobile %></div>
                    </div>
                    <div class="mr"><%= body[i].consigneeAddress %></div>
                </a>
            </li>
            <% } %>
        </ul>
    </div>
</article>

<footer>
    <div class="footer_box"><a href="<%= global.config.contextPath + global.config.viewPrefix %>/account/addAddress?pickFlag=<%= !!data.pickFlag %>" class="weui_btn weui_btn_default">新增收货地址</a></div>
</footer>

<% include ../common/footer.ejs %>
</body>
</html>
