<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>点餐</title>
    <% include ../common/public.ejs %>
    <style>
        .footer_box {
            position: relative;
            height: 0;
        }

        .cartInfo {
            display: none;
        }

        .weui_mask .footer_box {
            position: fixed;
            height: auto;
        }

        .weui_mask .cartInfo {
            display: block;
        }

        .foodType.nav_box {
            width: 130%;
        }

        #boxscroll .nav_box.foodType .nav_icon {
            width: 14%;
        }
    </style>
</head>
<body ontouchstart class="bg_b">
<% var i; %>
<article>
    <div class="tab_list bh bg_zi">
        <ul id="headTab">
            <li class="li1" data-tab="order_food">订餐</li>
            <li data-tab="restaurant_info">餐厅信息</li>
        </ul>
    </div>

    <div class="pagePanel" id="order_food">
        <div id="boxscroll">
            <div class="nav_box bh bg_zi1 foodType">
                <% for(i = 0; i < body.food.length; i++){ %>
                <div class="nav_icon" data-food-type-id="<%= body.food[i].id %>"
                     data-food-type-name="<%= body.food[i].name %>">
                    <div><img src="/custom/wx_style/images/nav_n_<%= body.food[i].imageCode %>.png"></div>
                    <div><%= body.food[i].name %></div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="ty_bt_title">
            <h3><span class="icon_tj1">&nbsp;</span><span id="foodTypeName"><%= body.food[0].name %></span></h3>
        </div>

        <% for(i = 0; i < body.data.length; i++){%>
        <div class="div_listtz foodTypeList foodTypeList_<%= body.data[i].id %>" style="<%= i==0?'':'display:none;'%>">
            <% var food = null;%>
            <% for(var j = 0; j < body.data[i].products.length; j++){%>
            <% food = body.data[i].products[j]; %>
            <div class="list bh foodData" data-food-id="<%= food.id %>" data-food-price="<%= food.basePrice.value %>" data-food-name="<%= food.name %>">
                <div class="text foodDetail"><a href="#"><%= food.name %></a></div>
                <div class="img foodDetail"><img src="/custom/wx_style/images/<%= food.image %>.png"></div>
                <div class="bh">

                    <div class="btn_gm">
                        <div class="icon_jh icon_jhh"></div>
                        <div class="sz" style=" display:none;">5</div>
                        <div class="icon_jh1" style=" display:none;"></div>
                    </div>
                    <div class="jg_b"><span>￥</span><%= food.basePrice.value || 18 %></div>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>

    <div class="pagePanel" id="restaurant_info" style="display: none;">
        <ul class="nr_list">
            <li class="bh li_ct evaluate_param" data-id="<%= body.id %>">
                <div class="img">
                    <div><a href="javascript:void(0)"><img src="/custom/wx_style/images/<%= body.image || 'icon_ct_mr' %>.png"></a></div>
                </div>
                <div class="text_ct bh">
                    <h2><a href="javascript:void(0)"><%= body.name %></a></h2>
                    <div class="icon_ty like"><s> </s><a href="tel:<%= body.phone %>"><%= body.phone %></a></div>
                    <div class="clear bh">
                        <div class="icon_ty dzh" onclick="__evaluat(this, true)"><s> </s><a href="javascript:void(0)" class="__count"><%= (body.comment && body.comment.yes) || '0' %></a></div>
                        <div class="icon_ty dw" onclick="__evaluat(this, false)"><s> </s><a href="javascript:void(0)" class="__count"><%= (body.comment && body.comment.yes) || '0' %></a></div>
                    </div>
                </div>
                <div class="icon_ty ctdz"><s> </s><a href="tel:62549984">餐厅地址 ：<%= body.address %></a></div>
            </li>
        </ul>

        <div>
            <div class="ty_bt_title" style="background:none;">
                <h3><span class="icon_ct">&nbsp;</span>餐厅简介</h3>
                <h5 class="ty_bt_box"><%- body.remark %></h5>
            </div>
        </div>
    </div>

    <div class="pagePanel" id="food_detail" style="display: none;background-color:#E8E5E2;">
        <div class="div_list">
            <div class="list_k1 bh foodData" id="food_detail_panel">
                <div class="img" name="img"></div>
                <div class="text_bth" name="name"></div>
                <div class="bh">
                    <div class="btn_gm">
                        <div class="icon_jh food_detail_button"></div>
                        <div class="sz" name="number"></div>
                        <div class="icon_jh1 food_detail_button"></div>
                    </div>
                    <div class="jg">￥<span name="price"></span></div>
                    <div class="ty_bt_titleh">
                        <h3><span class="icon_cp1">&nbsp;</span>菜品简介</h3>
                        <h5 class="ty_bt_box" name="desc"></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="" id="cartPanel"><!--weui_mask-->
        <div class="footer_box ">
            <div class="weui_cells cartInfo">
                <div class=" weui_cells_access">
                    <a class="weui_cell" href="javascript:;">
                        <div class="weui_cell_bd weui_cell_primary">
                            <p>购物车</p>
                        </div>
                        <div class="icon_sc" id="clear">清空</div>
                    </a>
                </div>
            </div>
            <div class="ddmx bh cartInfo">
                <ul class="list-group" style="margin:0;" id="cartList">
                </ul>
            </div>
            <div class="btn_box bh">
                <div class="div_gwc" id="cartIcon"><span id="cartTotalNumber">0</span></div>
                <div class="fkjg"><strong>￥<span id="cartTotalPrice">0.00</span></strong></div>
                <form name="form" id="form">
                    <input type="hidden" name="foodList" id="foodList" />
                    <a href="javascript:void(0);" class="weui_btn weui_btn_warn" id="submit">去结算</a>
                </form>
                <% if(cookie.orderType == 'wm'){ %>
                <!--<div class="fkjg1">配送费 <strong><%= body.deliveryFee%></strong> 元</div>-->
                <% } %>
            </div>
        </div>
    </div>
</article>


<% include ../common/footer.ejs %>
