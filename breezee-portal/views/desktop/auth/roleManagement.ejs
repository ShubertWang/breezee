<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>管理平台</title>
    <% include ../common/public.ejs %>
    <style>

        .rel_li {
            height: 20px;
        }

        .rel_li a {
            float: left;
            padding-left: 10px;
        }
    </style>
</head>
<body>
<% include ../common/header.ejs %>

<div class="container page-content">
    <div id="rolePanel">
        <div class="page-header">
            <h1>角色管理</h1>

            <div class="operationButton">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success" id="insert">
                        <span class="glyphicon glyphicon-plus"></span>
                        添加
                    </button>
                    <button type="button" class="btn btn-primary" id="update">
                        <span class="glyphicon glyphicon-pencil"></span>
                        修改
                    </button>
                    <button type="button" class="btn btn-danger" id="delete">
                        <span class="glyphicon glyphicon-trash"></span>
                        删除
                    </button>
                </div>
            </div>
        </div>

        <div class="dolphin-row">
            <div class="dolphin-col-18" id="listPanel">
                <!--list-->
                <div id="list"></div>
            </div>
            <div class="dolphin-col-6" id="formPanel">
                <!--form-->
                <div id="infoBasic" class="default-hidden">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <span class="glyphicon glyphicon-list-alt"></span>
                                角色维护
                            </div>
                        </div>
                        <div class="panel-body">
                            <form id="editForm">
                                <input type="hidden" name="id"/>
                                <div class="form-group">
                                    <label>角色编码</label>
                                    <input type="text" class="form-control" name="code" dol-validate="required">
                                </div>
                                <div class="form-group">
                                    <label>角色名称</label>
                                    <input type="text" class="form-control" name="name" dol-validate="required">
                                </div>
                                <div class="form-group">
                                    <label>权限</label>
                                    <input type="text" class="form-control" name="permits">
                                </div>
                                <hr/>
                                <div class="form-buttons">
                                    <button type="button" class="btn btn-primary" id="save">保存</button>
                                    <button type="button" class="btn btn-default" id="cancel">取消</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="acntList" class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="panel-title">
                            角色人员列表
                            <div class="operationButton">
                                <button type="button" class="btn btn-success" id="multipleUpdateAttr">
                                    <span class="glyphicon glyphicon-sort dolphin-rotate-90"></span>
                                    添加/删除人员
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="accountList"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="default-hidden" id="accountPanel">
        <!--title-->
        <div class="page-header">
            <h1>添加/删除属性</h1>

            <div class="operationButton">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary" id="confirm" disabled="disabled">
                        <span class="glyphicon glyphicon-ok"></span>
                        确定
                    </button>
                    <button type="button" class="btn btn-default" id="cancelSel" disabled="disabled">
                        <span class="glyphicon glyphicon-remove"></span>
                        取消
                    </button>
                </div>
            </div>
        </div>

        <div class="dolphin-row">
            <div class="dolphin-col-10">
                <div id="selectedList"></div>
            </div>
            <div class="dolphin-col-4">
                <button class="btn btn-info btn-block" change="select" all="true">&lt;&lt;</button>
                <button class="btn btn-info btn-block" change="select">&lt;</button>
                <br/><br/>
                <button class="btn btn-success btn-block" change="unSelect">&gt;</button>
                <button class="btn btn-success btn-block" change="unSelect" all="true">&gt;&gt;</button>
            </div>
            <div class="dolphin-col-10">
                <div id="unselectedList"></div>
            </div>
        </div>
    </div>
</div>

<% include ../common/footer.ejs %>
</body>
</html>
