<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>管理平台</title>
    <% include ../common/public.ejs %>
</head>
<body>
<% include ../common/header.ejs %>

<div class="container page-content">
    <!--title-->
    <div class="page-header">
        <h1>枚举维护</h1>

        <div class="operationButton" >
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-success" id="insert">
                    <span class="glyphicon glyphicon-plus"></span>
                    添加
                </button>
                <button type="button" class="btn btn-primary" id="updateDict" disabled="disabled">
                    <span class="glyphicon glyphicon-pencil"></span>
                    修改
                </button>
                <button type="button" class="btn btn-danger" id="deleteDict" disabled="disabled">
                    <span class="glyphicon glyphicon-trash"></span>
                    删除
                </button>
            </div>
        </div>
    </div>

    <!--query condition-->
    <div class="panel panel-default togglePanel">
        <div class="panel-heading">
            <h3 class="panel-title">
                <span class="glyphicon glyphicon-search"></span>
                查询条件
            </h3>
        </div>
        <div class="panel-body default-hidden">
            <form id="queryForm" name="queryForm" class="form-horizontal form-single">
                <div class="dolphin-row">
                    <div class="dolphin-col-10">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                枚举编码
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control"  name="code">
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-10">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                枚举名称
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control"  name="name">
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-4">
                        <div class="queryButtonPanel">
                            <button class="btn btn-small btn-primary" type="button" id="query">
                                查询
                            </button>
                            <button class="btn btn-small btn-default" type="button" id="conditionReset">
                                清空
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="dolphin-row">
        <div class="dolphin-col-10" id="listPanel">
            <!--list-->
            <div id="list"></div>
        </div>
        <div class="dolphin-col-14" id="infoPanel">
            <div class="panel panel-info" id="formPanel">
                <div class="panel-heading">
                    <div class="panel-title">
                        基本信息
                    </div>
                </div>
                <div class="panel-body form-horizontal" id="baseInfo">
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                枚举编码
                            </label>
                            <div class="col-sm-8">
                                <p class="form-control-static" name="code"></p>
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                枚举名称
                            </label>
                            <div class="col-sm-8">
                                <p class="form-control-static" name="name"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        枚举项列表
                        <div class="operationButton">
                            <button type="button" class="btn btn-success" id="enableOptions" disabled="disabled">
                                <span class="glyphicon glyphicon-open"></span>
                                启用
                            </button>
                            <button type="button" class="btn btn-warning" id="disableOptions" disabled="disabled">
                                <span class="glyphicon glyphicon-save"></span>
                                禁用
                            </button>
                        </div>
                    </div>
                </div>
                <div id="optionList"></div>
            </div>
        </div>
    </div>
</div>

<!----------------------------------------------------- modal win ----------------------------------------------------->
<div id="editWin">
    <form class="form-horizontal" id="editForm">
        <input type="hidden" name="id" />
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    基本信息
                </div>
            </div>
            <div class="panel-body">
                <div class="dolphin-row">
                    <div class="dolphin-col-24">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">
                                枚举编码
                            </label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control"  name="code">
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-24">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">
                                枚举名称
                            </label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control"  name="name">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    枚举项列表
                </div>
            </div>
            <div id="editOptionList"></div>
        </div>
    </form>
</div>

<% include ../common/footer.ejs %>
</body>
</html>
