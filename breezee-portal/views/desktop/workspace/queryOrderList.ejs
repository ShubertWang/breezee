<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>管理平台</title>
    <% include ../common/public.ejs %>
    <style>
        p{
            margin:0px;
        }
    </style>
</head>
<body>
<% include ../common/header.ejs %>
<div class="container">
    <div class="dolphin-row">
        <div class="dolphin-col-24">
            <div class="page-content">
                <!--title-->
                <div class="page-header">
                    <h1>订单查询</h1>
                </div>

                <!--query condition-->
                <div class="panel panel-default togglePanel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <span class="glyphicon glyphicon-search"></span>
                            查询条件
                        </h3>
                    </div>
                    <div class="panel-body default-hidden">
                        <form id="queryForm" name="queryForm" class="form-horizontal form-single">
                            <input type="hidden" name="storeName" value="<%= session.job %>"/>
                            <div class="dolphin-row">
                                <div class="dolphin-col-6">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label">
                                            订单编号
                                        </label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" name="code">
                                        </div>
                                    </div>
                                </div>
                                <div class="dolphin-col-6">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label">
                                            订单状态
                                        </label>
                                        <div class="col-sm-7">
                                            <select name="status" class="form-control">
                                                <option value=""></option>
                                                <option value="0">待付款</option>
                                                <option value="1">已创建</option>
                                                <option value="2">已确认</option>
                                                <option value="3">已制作</option>
                                                <option value="4">已完成</option>
                                                <option value="5">已拒绝</option>
                                                <option value="-1">已取消</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="dolphin-col-6">
                                    <div class="form-group">
                                        <label class="col-sm-5 control-label">
                                            联系手机
                                        </label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" name="userMobile">
                                        </div>
                                    </div>
                                </div>
                                <div class="dolphin-col-4">
                                    <div class="queryButtonPanel">
                                        <button class="btn btn-small btn-primary" type="button" id="query">
                                            查询
                                        </button>
                                        <button class="btn btn-small btn-default" type="button" id="conditionReset">
                                            清空
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--list-->
                <div id="list"></div>
            </div>
        </div>
        <!--<div class="dolphin-col-5">-->
        <!--<% include ./workspaceMenu.ejs %>-->
        <!--</div>-->
    </div>
</div>
<% include ../common/footer.ejs %>
</body>
</html>
