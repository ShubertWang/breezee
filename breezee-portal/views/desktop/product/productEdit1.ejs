<!DOCTYPE html>
<html>
<head>
    <% include ../common/meta.ejs %>
    <title>管理平台</title>
    <% include ../common/public.ejs %>
</head>
<body>
<% include ../common/header.ejs %>

<div class="container page-content">
    <!--title-->
    <div class="page-header">
        <h1>菜品维护</h1>

        <div class="operationButton">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-success" id="save">
                    <span class="glyphicon glyphicon-plus"></span>
                    下一步
                </button>
                <button type="button" class="btn btn-primary dol-goBack" id="cancel">
                    <span class="glyphicon glyphicon-pencil"></span>
                    取消
                </button>
            </div>
        </div>
    </div>

    <div class="page-info page-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    <span class="glyphicon glyphicon-tree-conifer"></span>
                    品类选择
                </div>
            </div>
            <div class="panel-body">
                <div id="categoryTree"></div>
            </div>

        </div>
        <div style="height: 30px;padding-top: 10px;">
            <span id="selectLabel" style="display: none;">当前选中的品类是：</span>
            <span id="selectNodeText" style="color: #356aa0;font-weight: 700;"></span>
        </div>
    </div>

    <div class="page-info page-2 default-hidden panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                基本信息
            </div>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" id="baseInfo">
                <div class="dolphin-row">
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                所属品类
                            </label>
                            <div class="col-sm-10">
                                <!--<select class="form-control" options optionUrl="/data/pcm/category/p/-1" codeField="id"-->
                                <!--name="cateId" id="categoryId"></select>-->
                                <input type="hidden" id="categoryId" class="form-control" name="cateId" readonly/>
                                <input id="categoryName" class="form-control" readonly/>
                            </div>
                        </div>

                    </div>
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                菜品名称
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="name">
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                菜品编码
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="code">
                            </div>
                        </div>
                    </div>
                    <div class="dolphin-col-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                基本价格
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="basePrice.value">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="page-info page-2 default-hidden panel panel-info default-hidden" id="extendAttrPanel">
        <div class="panel-heading">
            <div class="panel-title">
                扩展信息
            </div>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="dolphin-row" id="categoryAttrPanelBody"></div>
            </form>
        </div>
    </div>
</div>

<% include ../common/footer.ejs %>
</body>
</html>
